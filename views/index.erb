<html>
  <head>
    <meta charset='UTF-8' />
    <title>Compare UK Flights</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.41.0/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
      tailwind.config = {
        theme: {
          fontFamily: {
            'inter': ['inter']
          },
          extend: {
            
          }
        }
      }
    </script>
  </head>

  <body class="flex justify-center bg-purple-900">
    <div class="mt-6 flex flex-col items-center">
      <h1 class="text-3xl font-bold text-white">
        Compare v√¥os pelo Reino Unido
      </h1>

      <form action="/buscar">
        <div class="flex items-center justify-center mt-6 gap-1">
          <div class="form-control w-full max-w-xs">
            <select name="origem" class="select select-bordered w-full max-w-xs">
              <option disabled selected>Origem</option>
              <%@data_airports.each do |airport|%>
                <option value="<%= airport["code"]%>"><%= airport["name"] %></option>
              <% end %>
            </select>
          </div>
          
          <div class="form-control w-full max-w-xs">
            <select name="destino" class="select select-bordered w-full max-w-xs">
              <option disabled selected>Destino</option>
              <%@data_airports.each do |airport|%>
                <option value="<%= airport["code"]%>"><%= airport["name"] %></option>
              <% end %>
            </select>
          </div>

          <div class="flex items-center justify-center">
              <input name="origem_data" type="date"
              class="max-w-xs w-full bg-[#2A303C] rounded-md h-12"
                placeholder="Select a date" />
          </div>

          <div class="flex items-center justify-center">
            <input name="destino_data" type="date"
            class="max-w-xs w-full bg-[#2A303C] rounded-md h-12"
            placeholder="Select a date" />
          </div>

          <button type="submit" class="btn btn-primary">Procurar</button>
        </div>
      </form>
    </div>
  </body>
</html>